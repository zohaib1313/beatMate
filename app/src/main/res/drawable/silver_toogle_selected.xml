<layer-list xmlns:android="http://schemas.android.com/apk/res/android">

    <item >
        <shape android:shape="oval">
            <corners android:radius="20dp" />
            <solid android:color="@color/black" />
        </shape>
    </item>

    <item android:top="4dp" android:right="4dp" android:left="4dp" android:bottom="4dp">
        <shape android:shape="oval">
            <solid android:color="@android:color/darker_gray" />
            <size android:height="32dp" android:width="32dp" />
        </shape>
    </item>
    <item android:top="8dp" android:right="8dp" android:left="8dp" android:bottom="8dp">
        <shape android:shape="oval">
            <solid android:color="@color/silver_a" />
            <size android:height="30dp" android:width="30dp" />
        </shape>
    </item>
</layer-list>
